# ===================
# Database (Required)
# ===================
DATABASE_URL=postgresql://user:password@host:5432/whatsapp_agents

# ===================
# Redis (Required)
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# AI APIs (Required)
# ===================
ANTHROPIC_API_KEY=sk-ant-xxxxx
OPENAI_API_KEY=sk-proj-xxxxx  # For embeddings

# ===================
# Google (Optional - for Calendar & Speech)
# ===================
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxx
GOOGLE_CREDENTIALS_JSON=base64_encoded_service_account_json
OAUTH_REDIRECT_BASE=https://your-backend-url.com

# ===================
# Cloudflare R2 Storage (Optional - for Media)
# ===================
R2_ACCOUNT_ID=xxxxx
R2_ACCESS_KEY_ID=xxxxx
R2_SECRET_ACCESS_KEY=xxxxx
R2_BUCKET_NAME=whatsapp-media
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# ===================
# JWT Authentication (Required)
# ===================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-secret-key-here-generate-a-random-one

# ===================
# CORS (Production)
# ===================
CORS_ORIGINS=https://your-frontend-url.com,http://localhost:3000
